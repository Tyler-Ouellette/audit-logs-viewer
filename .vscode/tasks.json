{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch",
      "type": "process",
      "command": "npm",
      "windows": {
        "command": "npm.cmd"
      },
      "args": ["run-script", "start", "--", "--no-open"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.+):(.+): (error|warning): (TS\\d+) (.+)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "dt-app dev --no-open",
          "endsPattern": "Ready for development!"
        }
      }
    }
  ]
}
